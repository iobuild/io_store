
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">

      <h3>选择收货地址</h3>      

      <%= simple_form_for(@default_address, :url => "/addresses/select_default", :html => { :method => 'post' }) do |f| %>

      <% 
        @addresses.each do |address| 
          next if address.id == @default_address.id
      %>

      <div class="form-group"> 

        <input type="radio" name="address_id" value="<%= address.id %>" />
        
        <%= address.province %>
        <%= address.city %>
        <%= address.sub_city %>
        <%= address.street %>
        

      </div>
      <% end %>


      <div class="form-group">       
        <div class="controls">
          <a href="javascript: window.history.back();" class="btn btn-primary btn-lg">返回</a>
          <input type="submit" class="btn btn-lg btn-primary" name="submit" value="确定" />
          <%#= f.submit '下一步', :class => 'btn btn-lg btn-primary' %>
        </div>
      </div>

      <% end %>


    </div>

  </div>

</div>