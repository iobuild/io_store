
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">


      <%= render '/io_store/admin/products/menu' %>

      <%= simple_form_for(@product, :url => "/store/admin/products/#{@product.id}", html: { class: 'form-vertical', :multipart => true }) do |f| %>

        <%= f.error_notification %>

        <div class="form-group"> 

          <select name="product[category_id]" id="product_category_id" class="selectpicker show-tick" data-live-search=”true”>
            <% @categories.each do |c| %>

              <% if c.children.length > 0 %>
              <optgroup label="<%= c.name %>">
                <% c.children.each do |child| %>
                <option value="<%= child.id %>"><%= child.name %></option>
                <% end %>
              </optgroup>
              
              <% else %>
              <option value="<%= c.id %>"><%= c.name %></option>
              <% end %>
              
            <% end %>
          </select> 

          <script type="text/javascript">
            $(document).on('ready', function(){
              $('#product_category_id').val('<%= @product.category_id %>');
              $('.selectpicker').selectpicker('refresh');
            });
          </script>


        </div>


        <div class="form-group">       
            <%= f.input :title, :label => false, :required => true, :placeholder => '请填写商品标题', input_html: {:class => 'form-control'} %>
        </div>


        <div class="form-group">       
            <%= f.input :price, :label => false, :required => true, :placeholder => '请填写商品价格', input_html: {:class => 'form-control'} %>
        </div>


        <div class="form-group">       
            <%= f.input :desc, as: :text, :label => false, :required => true, :placeholder => '请填写商品描述', input_html: {:class => 'form-control', :rows => 12} %>
        </div>


        <div class="form-group">       
            <%= f.file_field :pic %>
        </div>

        


        <div class="form-group">       
          <div class="controls">
            <a href="javascript: window.history.back();" class="btn btn-primary btn-lg">返回</a>
            <%= f.submit '确定', :class => 'btn btn-lg btn-primary' %>
          </div>
        </div>


        

 
      <% end %>


    </div>
  </div>
</div>



